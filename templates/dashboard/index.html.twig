{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Tableau de bord</h1>
    
    <!-- Statistiques -->
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white p-3">
                <h4>Clients</h4>
                <h2>{{ client_count }}</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white p-3">
                <h4>Événements</h4>
                <h2>{{ event_count }}</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white p-3">
                <h4>CA Annuel</h4>
                <h2>{{ year_revenue }} €</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white p-3">
                <h4>CA Mensuel</h4>
                <h2>{{ month_revenue }} €</h2>
            </div>
        </div>
    </div>

    <!-- Section Clients -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Liste des Clients</h3>
            <a href="{{ path('app_client_new') }}" class="btn btn-primary mb-3">
                <i class="bi bi-person-plus"></i> Ajouter un client
            </a>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.name }}</td>
                            <td>{{ client.email }}</td>
                            <td>
                                <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <form action="{{ path('app_client_delete', {'id': client.id}) }}" method="post" class="d-inline" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Calendrier des événements -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Calendrier des Événements</h3>
            <div id="calendar"></div>
        </div>
    </div>

    <!-- Liste des derniers événements -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Derniers Événements</h3>
            <ul class="list-group">
                {% for event in recent_events %}
                    <li class="list-group-item">
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}">
                            {{ event.name }} - {{ event.date|date('d/m/Y') }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<!-- Scripts pour le calendrier -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
                {% for event in recent_events %}
                {
                    title: '{{ event.name|escape('js') }}',
                    start: '{{ event.date|date('Y-m-d') }}',
                    url: '{{ path('app_event_edit', {'id': event.id}) }}'
                },
                {% endfor %}
            ]
        });
        calendar.render();
    });
</script>

{% endblock %}
