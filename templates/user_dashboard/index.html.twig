{% extends 'base.html.twig' %}

{% block title %}Espace utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Espace utilisateur</h1>

    <h2>Mes Tarifs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Montant</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for tarif in tarifs %}
                <tr>
                    <td>{{ tarif.name }}</td>
                    <td>{{ tarif.amount }} €</td>
                    <td>{{ tarif.description }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun tarif trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
